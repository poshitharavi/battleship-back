generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Game {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  gridSize    Int   
  shots       Shot[]
  ships       Ship[]
  isOver      Boolean  @default(false) 
}

model Ship {
  id        Int      @id @default(autoincrement())
  gameId    Int
  game      Game     @relation(fields: [gameId], references: [id])
  type      ShipType
  positions Json     
  isSunk    Boolean  @default(false)
}

model Shot {
  id        Int      @id @default(autoincrement())
  gameId    Int
  game      Game     @relation(fields: [gameId], references: [id])
  position  String   
  isHit     Boolean  @default(false)
}

enum ShipType {
  BATTLESHIP
  DESTROYER
}
