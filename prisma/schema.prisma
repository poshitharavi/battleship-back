generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id             String     @id @default(uuid())
  player_board   Json
  computer_board Json
  status         GameStatus
  created_at     DateTime   @default(now())
}

enum GameStatus {
  in_progress
  completed
}
